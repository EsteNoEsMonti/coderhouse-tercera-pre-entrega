<header>
  <nav>
    <ul id="lista">
      <li><button id="back-to-cart">Back to products</button></li>
    </ul>
  </nav>
</header>

<main>
  <h1 id="cart-heading">{{Head}}</h1>
  <h3 id="ordertitle">Ticket detail</h3>
  <ul>
    <li><p>code: {{ticket.code}}</p></li>
    <li><p>purchase_datetime: {{ticket.purchase_datetime}}</p></li>
    <li><p>amount: ${{ticket.amount}}</p></li>
    <li><p>purchaser: {{ticket.purchaser}}</p></li>
  </ul>
  <hr/>
  {{#if listExist}}
  <h3 id="ordertitle">Order detail</h3>
  <section id="cart-items">
    {{#each list}}
    <div id="cart-item-{{this.product.code}}">
      <p>Product:</p>
      <ul>
        <li>Title: {{this.product.title}}</li>
        <li>Code: {{this.product.code}}</li>
        <li>Price: ${{this.product.price}}</li>
        <li>Quantity: {{this.quantity}}</li>
      </ul>
    </div>
    {{/each}}
  </section>
  <hr/>
  <button id="pay-button">Pay My Order</button>
  {{/if}}
</main>

<script src="/public/js/ticket.js"></script>